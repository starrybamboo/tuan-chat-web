{
  "appId": "com.tuanchat.tuanchat",
  "productName": "团剧共创",
  "copyright": "Copyright © 2025 ${tuan-chat}",
  "publish": [
    {
      "provider": "github",
      "owner": "starrybamboo",
      "repo": "tuan-chat-web"
    }
  ],
  "files": ["./electron", "./build"],
  "extraResources": [
    {
      "from": "./extraResources/",
      "to": "extraResources"
    }
  ],
  "directories": {
    "output": "./release"
  },
  "win": {
    "target": ["nsis", "zip"]
  },
  "mac": {
    "target": ["dmg", "zip"]
  },
  "linux": {
    "target": "AppImage"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
