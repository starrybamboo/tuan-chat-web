{
  "name": "tuan-chat-web",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Tuan Chat",
  "author": "Tuan Chat",
  "main": "electron/main.cjs",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "openapi": "openapi --input ./api/tuanchat_OpenAPI.json --output ./api --client fetch --name TuanChat",
    "electron:dev": "electron .",
    "electron:build": "electron-builder build --config electron-builder.json"
  },
  "build": {
    "appId": "com.yourcompany.yourappname",
    "productName": "你的应用名称",
    "copyright": "Copyright © 2024 ${author}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@antv/g6": "^5.0.46",
    "@ltd/j-toml": "^1.38.0",
    "@react-router/node": "^7.9.4",
    "@react-router/serve": "^7.9.4",
    "@tanstack/react-query": "^5.69.0",
    "@tanstack/react-query-devtools": "^5.72.2",
    "@types/react-image-crop": "^9.0.2",
    "@uidotdev/usehooks": "^2.4.1",
    "@vitejs/plugin-rsc": "^0.5.0",
    "@xyflow/react": "^12.8.2",
    "ahooks": "^3.8.5",
    "clsx": "^2.1.1",
    "dagre": "^0.8.5",
    "detect-port": "^2.1.0",
    "dom-to-image": "^2.6.0",
    "electron-dl": "^4.0.0",
    "extract-zip": "^2.0.1",
    "html-to-image": "^1.11.13",
    "isbot": "^5",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.3.1",
    "openapi-typescript-codegen": "^0.29.0",
    "qrcode": "^1.5.4",
    "quill": "^2.0.3",
    "react": "^19.0.0",
    "react-d3-tree": "^3.6.6",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "react-hot-toast": "^2.5.2",
    "react-image-crop": "^11.0.7",
    "react-markdown": "^10.1.0",
    "react-router": "^7.9.4",
    "react-syntax-highlighter": "^15.6.1",
    "react-virtuoso": "^4.12.7",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "ts-md5": "^2.0.1",
    "use-immer": "^0.11.0",
    "vaul": "^1.1.2",
    "vite-plugin-babel": "^1.3.2",
    "wavesurfer.js": "^7.10.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@eslint/js": "^9.23.0",
    "@react-router/dev": "^7.9.4",
    "@tailwindcss/vite": "^4.0.17",
    "@tanstack/eslint-plugin-query": "^5.68.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "daisyui": "^5.1.24",
    "depcheck": "^1.4.7",
    "electron": "^35.0.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.23.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^15.5.0",
    "react-router-devtools": "^1.1.0",
    "tailwindcss": "^4.0.17",
    "ts-jest": "^29.4.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vite": "^6.2.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  },
  "lint-staged": {
    "*": "eslint"
  }
}
