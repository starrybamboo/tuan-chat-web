{
  "name": "tuan-chat-web",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "author": "Tuan Chat",
  "main": "electron/main.js",
  "scripts": {
    "build": "react-router build",
    "dev": "node ./scripts/dev.mjs",
    "dev:force": "node ./scripts/dev.mjs --force",
    "start": "node ./scripts/start.mjs",
    "typecheck": "react-router typegen && tsc -p tsconfig.typecheck.json",
    "lint": "eslint . --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "optimize:ai-style-images": "node ./scripts/optimize-ai-style-images.mjs",
    "prepare": "husky",
    "openapi": "openapi --input ./api/tuanchat_OpenAPI.json --output ./api --client fetch --name TuanChat",
    "electron:dev": "node ./scripts/electron-dev.mjs",
    "electron:dev:only": "electron .",
    "electron:build": "pnpm -s build && electron-builder build --config electron-builder.json",
    "electron:build:win:zip": "pnpm -s build && electron-builder build --config electron-builder.json --win zip",
    "electron:build:win:nsis": "pnpm -s build && electron-builder build --config electron-builder.json --win nsis",
    "electron:build:mac:zip": "pnpm -s build && electron-builder build --config electron-builder.json --mac zip",
    "electron:build:mac:dmg": "pnpm -s build && electron-builder build --config electron-builder.json --mac dmg"
  },
  "build": {
    "appId": "com.tuanchat.tuanchat",
    "productName": "团剧共创",
    "copyright": "Copyright © 2024 ${author}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "electron/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "electron/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@react-router/node": "^7.12.0",
    "detect-port": "^2.1.0",
    "electron-updater": "^6.7.3",
    "fflate": "0.8.2",
    "isbot": "^5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@blocksuite/affine": "0.22.4",
    "@blocksuite/affine-components": "0.22.4",
    "@blocksuite/affine-model": "0.22.4",
    "@blocksuite/affine-shared": "0.22.4",
    "@blocksuite/global": "0.22.4",
    "@blocksuite/integration-test": "0.22.4",
    "@blocksuite/std": "0.22.4",
    "@blocksuite/store": "0.22.4",
    "@blocksuite/sync": "0.22.4",
    "@eslint-react/eslint-plugin": "^1.38.4",
    "@eslint/js": "^9.23.0",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@ltd/j-toml": "^1.38.0",
    "@npmcli/package-json": "5.1.0",
    "@phosphor-icons/react": "^2.1.10",
    "@react-router/dev": "^7.9.4",
    "@react-router/serve": "^7.9.4",
    "@shoelace-style/shoelace": "2.20.1",
    "@tailwindcss/vite": "^4.0.17",
    "@tanstack/eslint-plugin-query": "^5.68.0",
    "@tanstack/react-query": "^5.69.0",
    "@toeverything/pdf-viewer": "0.1.1",
    "@toeverything/pdfium": "0.1.1",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/react-image-crop": "^9.0.2",
    "@uidotdev/usehooks": "^2.4.1",
    "@vanilla-extract/vite-plugin": "^5.1.4",
    "@vitejs/plugin-rsc": "^0.5.0",
    "@xyflow/react": "^12.8.2",
    "ahooks": "^3.8.5",
    "babel-plugin-react-compiler": "^1.0.0",
    "browser-image-compression": "^2.0.2",
    "clsx": "^2.1.1",
    "dagre": "^0.8.5",
    "daisyui": "^5.1.24",
    "depcheck": "^1.4.7",
    "electron": "^35.0.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.23.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.0",
    "fast-glob": "^3.3.3",
    "globals": "^16.0.0",
    "html-to-image": "^1.11.13",
    "husky": "^9.1.7",
    "idb": "^8.0.3",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.3.1",
    "lint-staged": "^15.5.0",
    "openapi-typescript-codegen": "^0.29.0",
    "pixi.js": "^8.6.6",
    "qrcode": "^1.5.4",
    "quill": "^2.0.3",
    "react": "^19.0.0",
    "react-d3-tree": "^3.6.6",
    "react-dom": "^19.0.0",
    "react-h5-audio-player": "^3.10.1",
    "react-hook-form": "^7.55.0",
    "react-hot-toast": "^2.5.2",
    "react-image-crop": "^11.0.7",
    "react-markdown": "^10.1.0",
    "react-router": "^7.9.4",
    "react-router-devtools": "^1.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-virtuoso": "^4.12.7",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^4.0.17",
    "ts-jest": "^29.4.5",
    "ts-md5": "^2.0.1",
    "tweakpane": "^4.0.5",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.27.0",
    "undici": "^6.21.0",
    "use-immer": "^0.11.0",
    "vaul": "^1.1.2",
    "vite": "^6.2.6",
    "vite-plugin-babel": "^1.3.2",
    "vite-tsconfig-paths": "^5.1.4",
    "zustand": "^5.0.9"
  },
  "pnpm": {
    "overrides": {
      "@lit/context": "1.1.6",
      "@lit/react": "1.0.8",
      "@lit/reactive-element": "2.1.2",
      "lit": "3.3.2",
      "lit-element": "4.2.2",
      "lit-html": "3.3.2"
    },
    "patchedDependencies": {
      "lz-string@1.5.0": "patches/lz-string@1.5.0.patch",
      "@blocksuite/affine-block-embed-doc@0.22.4": "patches/@blocksuite__affine-block-embed-doc@0.22.4.src.patch",
      "@blocksuite/affine-block-table@0.22.4": "patches/@blocksuite__affine-block-table@0.22.4.patch",
      "@blocksuite/affine-inline-link@0.22.4": "patches/@blocksuite__affine-inline-link@0.22.4.patch",
      "@blocksuite/data-view@0.22.4": "patches/@blocksuite__data-view@0.22.4.patch"
    }
  },
  "lint-staged": {
    "*": "eslint"
  }
}
